<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maoatao.cas.core.mapper.RoleMapper">
    <resultMap id="roleMap" type="com.maoatao.cas.core.bean.entity.RoleEntity">
        <id property="id" column="id"/>
        <result property="clientId" column="client_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdById" column="created_by_id"/>
        <result property="createdDate" column="created_date"/>
        <result property="updatedById" column="updated_by_id"/>
        <result property="updatedDate" column="updated_date"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <select id="getRoleByUser" resultMap="roleMap">
        SELECT b.`name`, b.`client_id`
        FROM `t_cas_client_user_role` a,
             `t_cas_role` b
        WHERE a.`role_id` = b.`id`
          AND b.`deleted` = b'0'
          AND a.`client_user_id` = #{userId};
    </select>
</mapper>
